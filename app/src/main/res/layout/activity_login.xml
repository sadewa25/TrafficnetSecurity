<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.codedirect.login.LoginActivity">

    <ImageView
        android:id="@+id/iv_login_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_superlarge"
        android:padding="@dimen/margin_supersmall"
        android:src="@drawable/logo_safevision" />

    <EditText
        android:id="@+id/et_login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:background="@drawable/rectangle_input"
        android:fontFamily="@font/nunito"
        android:hint="@string/title_email"
        android:padding="@dimen/margin_supersmall" />

    <EditText
        android:id="@+id/et_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_supersmall"
        android:layout_marginRight="@dimen/margin_small"
        android:background="@drawable/rectangle_input"
        android:fontFamily="@font/nunito"
        android:hint="@string/title_password"
        android:padding="@dimen/margin_supersmall" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small">

        <RadioButton
            android:id="@+id/rb_remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/radio_primary"
            android:fontFamily="@font/nunito"
            android:text="@string/title_remember" />

        <TextView
            android:id="@+id/btn_forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/nunito"
            android:text="@string/title_forgot_pass"
            android:textSize="@dimen/text_small" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_supersmall"
        android:layout_marginRight="@dimen/margin_small"
        android:background="@drawable/home_button"
        android:fontFamily="@font/nunito"
        android:text="@string/title_login"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_small"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/margin_supersmall">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:text="@string/title_dontaccount"
            android:textSize="@dimen/text_supersmall"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_link_to_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_supersmall"
            android:fontFamily="@font/nunito"
            android:text="@string/title_sign_up"
            android:textColor="@color/link_primary"
            android:textSize="@dimen/text_supersmall"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_superlarge"
        android:text="@string/title_another_login"
        android:textAlignment="center"
        android:textSize="@dimen/text_small"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="@dimen/default_button_size"
            android:layout_height="@dimen/default_button_size"
            android:background="@drawable/login_google" />

        <Button
            android:layout_width="@dimen/default_button_size"
            android:layout_height="@dimen/default_button_size"
            android:layout_margin="@dimen/default_btn_padding"
            android:background="@drawable/login_facebook" />

        <Button
            android:layout_width="@dimen/default_button_size"
            android:layout_height="@dimen/default_button_size"
            android:background="@drawable/login_twitter" />

    </LinearLayout>

</LinearLayout>
