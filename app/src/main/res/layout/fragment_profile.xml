<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codedirect.menu.ProfileFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_profile"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"/>
    <TextView
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Muhammad Salah"
        android:fontFamily="@font/nunito"
        android:textStyle="bold"
        android:textSize="18sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Surabaya"
        android:fontFamily="@font/nunito_sans"
        android:textAlignment="center"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_small"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_small"
        android:background="@drawable/rectangle_input"
        android:layout_marginTop="@dimen/margin_supersmall"
        android:hint="Fullname"
        android:padding="@dimen/margin_supersmall" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_small"
        android:background="@drawable/rectangle_input"
        android:layout_marginTop="@dimen/margin_supersmall"
        android:hint="Email"
        android:padding="@dimen/margin_supersmall" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_small"
        android:background="@drawable/rectangle_input"
        android:layout_marginTop="@dimen/margin_supersmall"
        android:hint="Address"
        android:padding="@dimen/margin_supersmall" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_small"
        android:background="@drawable/rectangle_input"
        android:layout_marginTop="@dimen/margin_supersmall"
        android:hint="City"
        android:padding="@dimen/margin_supersmall" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_purple"
        android:layout_marginTop="@dimen/margin_small"
        android:text="Save Profile"
        android:textColor="@android:color/white"
        android:fontFamily="@font/nunito_sans"
        android:textStyle="bold"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_small"/>
</LinearLayout>
