<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_supersmall"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_cctv_img"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/ic_home_black_24dp"
            />

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/item_cctv_img"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_supersmall"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/margin_supersmall"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_sensor_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CCTV Halaman"
                android:fontFamily="@font/nunito_sans"
                android:textStyle="bold"
                android:textSize="@dimen/text_small" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aman"
                android:textColor="@android:color/holo_green_light"
                android:fontFamily="@font/nunito"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:text="Info"
            android:textColor="@android:color/holo_green_dark"
            android:fontFamily="@font/nunito"
            android:layout_gravity="center_vertical"
            android:textAlignment="textEnd"
            android:textStyle="bold"
            android:textSize="@dimen/text_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_supersmall"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat" />
    </LinearLayout>
</androidx.cardview.widget.CardView>